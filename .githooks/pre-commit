#!/bin/sh

echo "\033[36m
======================================================================
Running golangci-lint
======================================================================"

golangci-lint run --config .golangci.yaml

if [ $? != 0 ]; then
    echo "\033[31m
======================================================================
golangci-lint check failed
======================================================================"
else
    echo "\033[32m 
======================================================================
golangci-lint check success
======================================================================"
fi
